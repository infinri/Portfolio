# Environment Configuration Template
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# Application Environment (development/production)
APP_ENV=production

# Site Configuration
SITE_NAME=
SITE_URL=

# Security
CSRF_ENABLED=true
HTTPS_ONLY=true

# Session Configuration
SESSION_LIFETIME=7200        # Session lifetime in seconds (default: 7200 = 2 hours)
SESSION_DOMAIN=              # Session cookie domain (leave empty for current domain)

# Google Sheets Configuration (for contact form submissions)
# Deploy an Apps Script web app on your Google Sheet and paste the URL here
# See README for setup instructions
GOOGLE_SHEETS_ENABLED=true
GOOGLE_SHEETS_WEBHOOK_URL=https://script.google.com/macros/s/YOUR_SCRIPT_ID/exec

# Google reCAPTCHA v3
RECAPTCHA_SITE_KEY=your_site_key_here
RECAPTCHA_SECRET_KEY=your_secret_key_here
RECAPTCHA_ENABLED=true
RECAPTCHA_MIN_SCORE=0.5
